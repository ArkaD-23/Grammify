{
  "workflows": {
    "agent_workflow": {
      "description": "Workflow for summarization, sentiment analysis, translation, and text-to-speech",
      "entry_point": "summarize",
      "nodes": {
        "summarize": {
          "description": "Summarize the input text",
          "module": "nodes.text_summarization",
          "function": "text_summarization_node"
        },
        "analyze_sentiment": {
          "description": "Analyze sentiment of the summarized text",
          "module": "nodes.sentiment_analysis",
          "function": "sentiment_analysis_node"
        },
        "translate": {
          "description": "Translate the summarized text to the target language",
          "module": "nodes.language_translation",
          "function": "language_translation_node"
        },
        "text_to_speech": {
          "description": "Convert translated text to speech",
          "module": "nodes.text_to_speech",
          "function": "text_to_speech_node"
        }
      },
      "edges": [
        {
          "from": "summarize",
          "to": "analyze_sentiment"
        },
        {
          "from": "analyze_sentiment",
          "to": "translate"
        },
        {
          "from": "translate",
          "to": "text_to_speech"
        }
      ]
    }
  }
}
